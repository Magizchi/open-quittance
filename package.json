    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.3",
    "file-saver": "^2.0.5",
    "jsonwebtoken": "^9.0.2",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.3",
    "pdf-lib": "^1.17.1",
    "pdfmake": "^0.2.15"
  },
  "lint-staged": {
    "src/**/*": "prettier --write",
    "src/**/*.{svelte,ts}": "eslint"
  },
