{
  "name": "open-quittance",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "eslint": "eslint .",
    "prettier": "prettier --plugin-search-dir . --check .",
    "prettier:fix": "prettier --plugin-search-dir . --write .",
    "migrate": "npx drizzle-kit generate --config=drizzle.config.ts && npx drizzle-kit push --config=drizzle.config.ts",
    "prepare": "husky",
    "commit": "cz"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/kit": "^1.30.4",
    "@tailwindcss/forms": "^0.5.9",
    "@types/bcrypt": "^5.0.1",
    "@types/blob-stream": "^0.1.33",
    "@types/cookie": "^0.5.1",
    "@types/file-saver": "^2.0.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/pdfmake": "^0.2.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.16",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.25.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.30.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.31",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.10.1",
    "svelte": "^4.2.12",
    "svelte-check": "^3.4.3",
    "tailwindcss": "^3.3.3",
    "tslib": "^2.4.1",
    "tsx": "^4.19.1",
    "typescript": "^5.0.0",
    "vite": "^4.4.2",
    "vitest": "^0.34.0"
  },
  "type": "module",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "blob-stream": "^0.1.3",
    "classnames": "^2.5.1",
    "convertir-nombre-lettre": "^1.0.2",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.2",
    "file-saver": "^2.0.5",
    "jsonwebtoken": "^9.0.2",
    "mysql": "^2.18.1",
    "mysql2": "^3.11.3",
    "pdf-lib": "^1.17.1",
    "pdfmake": "^0.2.8"
  },
  "lint-staged": {
    "src/**/*": "prettier --write",
    "src/**/*.{svelte,ts}": "eslint",
    "src/**/*.{svelte}": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
